const mongoose = require('mongoose');


mongoose.connect('mongodb+srv://admin:@hostcloud.dlqx3.mongodb.net/myFirstDatabase?retryWrites=true&w=majority', {
    useUnifiedTopology: true,
    useNewUrlParser: true,
    useCreateIndex: true
}).then(
    db => console.log('Database is connected')
).catch(
    err => console.log(err)
);
